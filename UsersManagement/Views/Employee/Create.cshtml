@model UsersManagement.Models.Users.UsersInfo

@section Scripts
{
    <script src="~/js/Users/create.js"></script>
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Create New Employee</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="UserName"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Password"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="Password" class="form-control" type="password" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        Confirm Password
                    </div>
                    <div class="col-6">
                        <input class="form-control" type="password" id="ConfirmPassword" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="RoleId"></label>
                    </div>
                    <div class="col-6">
                        <input asp-for="RoleId" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input class="btn btn-info w-75" value="Create" id="CreateBtn" type="submit" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>