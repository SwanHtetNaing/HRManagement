@model IEnumerable<UsersManagement.Models.Users.UsersInfo>

@section Scripts
{
    <script src="~/js/Users/listing.js"></script>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Employee Id</th>
                    <th>Employee Email</th>
                    <th>Employee UserName</th>
                    <th>Role Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td width="10%">@user.UserId</td>
                        <td width="25%">@user.Email</td>
                        <td width="25%">@user.UserName</td>
                        <td width="10%">@user.RoleId</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Edit" asp-route-Id="@user.UserId" class="btn btn-primary mx-1">Edit</a>
                                <a id="DeleteBtn" asp-action="Delete" onclick="DeleteUser(@user.UserId)" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>